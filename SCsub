#!/usr/bin/env python

Import("env")
Import("env_modules")

env_artifact_seekers = env_modules.Clone()

cl_src_dir = "./client/"
sh_src_dir = "./shared/"

sources = Glob("*.cpp")
sources += Glob(cl_src_dir+"*.cpp")
sources += Glob(cl_src_dir+"entities/*.cpp")

env_artifact_seekers.add_source_files(env.modules_sources, sources)